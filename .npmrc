# Security settings
audit=true
audit-level=moderate

# Prevent package installation with known vulnerabilities
force=false

# Enable package-lock integrity checks
package-lock=true
package-lock-only=false

# Enable strict SSL
strict-ssl=true

# Disable automatic package updates during install
save-exact=false
save-prefix=^

# Engine strict mode
engine-strict=true

# Legacy peer dependencies disabled for security
legacy-peer-deps=false
