{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "jest",
  "jest": {
    "configFile": "jest.mutation.config.js"
  },
  "mutate": [
    "src/domain/entities/**/*.ts",
    "src/domain/value-objects/**/*.ts",
    "src/application/use-cases/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts"
  ],
  "reporters": ["html", "clear-text", "progress"],
  "timeoutMS": 60000,
  "logLevel": "info",
  "concurrency": 2,
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "mutator": {
    "excludedMutations": [
      "BlockStatement",
      "ConditionalExpression"
    ]
  },
  "htmlReporter": {
    "fileName": "tests/mutation/reports/mutation-report.html"
  },
  "clearTextReporter": {
    "logTests": false
  }
}