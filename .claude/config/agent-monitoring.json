{
  "monitoring": {
    "enabled": true,
    "defaultVerbosity": "verbose",
    "realTimeOutput": true,
    "colorOutput": true,
    "showProgress": true,
    "showParallelExecution": true,
    "showDecisions": true,
    "showTiming": true,
    "maxLogBuffer": 5000,
    "outputFormat": "console",
    "logFile": ".claude/logs/agent-execution.log"
  },

  "verbosityLevels": {
    "silent": {
      "showStart": false,
      "showProgress": false,
      "showDecisions": false,
      "showOutput": false,
      "showComplete": true,
      "showError": true,
      "showTiming": false
    },
    "basic": {
      "showStart": true,
      "showProgress": false,
      "showDecisions": false,
      "showOutput": false,
      "showComplete": true,
      "showError": true,
      "showTiming": false
    },
    "verbose": {
      "showStart": true,
      "showProgress": true,
      "showDecisions": true,
      "showOutput": false,
      "showComplete": true,
      "showError": true,
      "showTiming": true
    },
    "debug": {
      "showStart": true,
      "showProgress": true,
      "showDecisions": true,
      "showOutput": true,
      "showComplete": true,
      "showError": true,
      "showTiming": true,
      "showInternalState": true
    }
  },

  "visualization": {
    "icons": {
      "start": "üöÄ",
      "parallel": "üîÄ",
      "sequential": "‚û°Ô∏è",
      "progress": "‚ö°",
      "decision": "ü§î",
      "output": "üìù",
      "complete": "‚úÖ",
      "error": "‚ùå",
      "info": "‚ÑπÔ∏è",
      "timing": "‚è±Ô∏è",
      "warning": "‚ö†Ô∏è",
      "optimization": "üîß",
      "analysis": "üîç",
      "collaboration": "ü§ù"
    },

    "colors": {
      "start": "green",
      "progress": "yellow",
      "decision": "cyan",
      "output": "magenta",
      "complete": "green",
      "error": "red",
      "info": "blue",
      "warning": "yellow",
      "dim": "gray"
    },

    "progressBar": {
      "width": 30,
      "filledChar": "‚ñà",
      "emptyChar": "‚ñë",
      "showPercentage": true,
      "showNumbers": true
    }
  },

  "parallelExecution": {
    "showGroups": true,
    "showConcurrency": true,
    "visualizeProgress": true,
    "trackDependencies": true,
    "highlightBottlenecks": true
  },

  "agentMetrics": {
    "trackExecutionTime": true,
    "trackMemoryUsage": false,
    "trackSuccessRate": true,
    "trackDecisionQuality": true,
    "trackOutputQuality": true
  },

  "reporting": {
    "generateSummary": true,
    "includeTimeline": true,
    "includeMetrics": true,
    "includeDecisions": true,
    "exportFormats": ["markdown", "json", "html"],
    "autoExport": false
  },

  "alerts": {
    "onError": true,
    "onSlowExecution": true,
    "onLowQuality": true,
    "onParallelConflict": true,
    "thresholds": {
      "slowExecutionMs": 30000,
      "lowQualityScore": 0.6,
      "errorRate": 0.1
    }
  },

  "customPatterns": {
    "orchestrator": {
      "icon": "üéØ",
      "color": "bold",
      "showSubtasks": true,
      "indentLevel": 0
    },
    "meta-agent": {
      "icon": "üß†",
      "color": "purple",
      "showOptimizations": true,
      "indentLevel": 0
    },
    "parallel-execution-orchestrator": {
      "icon": "‚ö°",
      "color": "yellow",
      "showThreadPool": true,
      "indentLevel": 0
    }
  },

  "sessionManagement": {
    "autoStartSession": true,
    "sessionIdFormat": "session-{timestamp}",
    "preserveHistory": true,
    "maxHistorySessions": 100,
    "compressOldSessions": true
  },

  "performance": {
    "bufferFlushInterval": 100,
    "maxConcurrentLogs": 1000,
    "throttleOutput": false,
    "aggregateSmallUpdates": true
  },

  "integration": {
    "claudeCode": {
      "interceptOutput": true,
      "enhanceMessages": true,
      "injectTimings": true,
      "showAgentContext": true
    },
    "slashCommands": {
      "/execute": {
        "defaultVerbosity": "verbose",
        "autoShowProgress": true
      },
      "/status": {
        "includeAgents": true,
        "showActiveOnly": false
      }
    }
  }
}
