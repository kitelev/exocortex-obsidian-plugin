#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check for version conflicts FIRST
echo "🔍 Checking version uniqueness..."
./.claude/scripts/check-version-conflict.sh || exit 1

# Run tests
echo "🧪 Running tests..."
# Force ARM64 architecture for node to ensure correct rollup binary is loaded
arch -arm64 npm test || exit 1

# Check BDD coverage
echo "📊 Checking BDD coverage..."
npm run bdd:check || exit 1

echo "✅ All checks passed!"
