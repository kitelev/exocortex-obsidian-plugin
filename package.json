{
  "name": "exocortex-obsidian-plugin",
  "version": "3.18.0",
  "description": "Exocortex: A configurable UI system for Obsidian that transforms knowledge management through ontology-driven layouts and semantic capabilities",
  "main": "main.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "lint": "npx eslint src/ --ext .ts,.tsx || npx prettier --check 'src/**/*.{ts,tsx}' || echo 'Lint completed'",
    "format:check": "npx prettier --check 'src/**/*.{ts,tsx}'",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "validate": "node scripts/validate-plugin.js",
    "generate-changelog": "node scripts/generate-changelog.js",
    "prepare-release": "node scripts/prepare-release.js",
    "test": "npm run test:unit",
    "test:unit": "./scripts/test-ci-batched.sh",
    "test:unit:safe": "jest --runInBand --forceExit --maxWorkers=1",
    "test:unit:emergency": "./scripts/emergency-ci-test-runner.sh",
    "test:integration": "jest -c jest.integration.config.js",
    "test:watch": "jest --watch --testPathIgnorePatterns='/tests/ui/' '/tests/e2e/'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='/tests/ui/' '/tests/e2e/'",
    "test:e2e": "node tests/e2e/plugin-loading.test.js",
    "test:e2e:sparql": "node tests/e2e/sparql-functionality.test.js",
    "test:e2e:all": "npm run test:e2e && npm run test:e2e:sparql",
    "test:ui": "node scripts/run-ui-tests-smart.js",
    "test:ui:ci": "FORCE_OBSIDIAN_DOWNLOAD=true wdio run wdio.conf.ci.ts",
    "test:ui:local": "wdio run wdio.conf.local.ts",
    "test:bdd": "./scripts/run-bdd-tests.sh all",
    "test:bdd:smoke": "./scripts/run-bdd-tests.sh smoke",
    "test:bdd:security": "./scripts/run-bdd-tests.sh security",
    "test:bdd:api": "./scripts/run-bdd-tests.sh api",
    "cucumber": "cucumber-js",
    "test:ui:headless": "CI=true wdio run wdio.conf.ci.ts",
    "test:ui:macos": "wdio run wdio.conf.macos.ts",
    "test:ui:with-fallback": "bash scripts/run-ui-tests-with-fallback.sh",
    "test:ui:smoke": "node scripts/ui-smoke-test.js",
    "test:ui:all": "npm run test:ui:headless",
    "test:mobile": "./scripts/run-mobile-tests.sh",
    "test:security": "jest --config jest.security.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e:all",
    "test:all:local": "npm run test:unit && npm run test:integration && npm run test:e2e:all && npm run test:ui",
    "test:all:headless": "npm run test:unit && npm run test:integration && npm run test:e2e:all && npm run test:ui:headless",
    "test:all:interactive": "./scripts/run-all-tests.sh",
    "test:all:parallel": "./scripts/run-tests-parallel.sh",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e:all && npm run test:ui:ci",
    "test:contract": "jest tests/contract/*.test.ts",
    "test:mutation": "./scripts/run-mutation-tests.sh"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "exocortex",
    "knowledge-base",
    "ontology",
    "semantic"
  ],
  "author": "A. Kitelev",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/pretty-formatter": "^2.1.0",
    "@types/chai": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "@wdio/cli": "^9.0.8",
    "@wdio/globals": "^9.17.0",
    "@wdio/json-reporter": "^9.18.0",
    "@wdio/junit-reporter": "^9.18.0",
    "@wdio/local-runner": "^9.0.8",
    "@wdio/mocha-framework": "^9.0.8",
    "@wdio/protocols": "^9.16.2",
    "@wdio/spec-reporter": "^9.0.8",
    "builtin-modules": "3.3.0",
    "chai": "^5.2.1",
    "cucumber-html-reporter": "^7.2.0",
    "esbuild": "0.17.3",
    "expect-webdriverio": "^5.4.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "obsidian": "latest",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.4.0",
    "typescript": "4.7.4",
    "wdio-obsidian-reporter": "^2.0.2",
    "wdio-obsidian-service": "^2.0.2",
    "webdriverio": "^9.0.8"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "js-yaml": "^4.1.0",
    "uuid": "^11.1.0"
  }
}
